# AutoCoin Environment Variables Example
# Copy this file to .env and fill in your actual values
#
# NOTE: Environment variables take precedence over config.toml values.
# If you set API keys here, the config.toml file is optional.

# Upbit API Credentials (Required)
# Get your API keys from https://upbit.com/my_page/api_key
UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# Optional: Override default API URLs
UPBIT_API_URL=https://api.upbit.com/v1
UPBIT_WS_URL=wss://api.upbit.com/websocket/v1

# Trading Parameters (Optional - overrides config.toml)
TRADING_TARGET_COINS=20
TARGET_PROFIT_RATE=0.10
STOP_LOSS_RATE=0.05
SURGE_THRESHOLD=0.05
SURGE_TIMEFRAME_MINUTES=60
VOLUME_MULTIPLIER=2.0
MIN_ORDER_AMOUNT_KRW=5000

# Discord Notifications (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# System (Optional)
LOG_LEVEL=info
RUST_LOG=info
DB_PATH=./data/trading.db

# Strategy (Optional)
STRATEGY_CONFIG=./config/strategy.toml
